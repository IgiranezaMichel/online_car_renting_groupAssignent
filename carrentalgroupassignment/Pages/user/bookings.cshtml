@page
@model carrentalgroupassignment.Pages.user.bookingsModel
@{
}
<h2 class="text-center p-2 border border-dark mb-3">
    @Model.car.Platenumber
</h2>
<div id="carouselId" class="carousel slide bg-dark text-center" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active" aria-current="true" aria-label="First slide"></li>
        <li data-bs-target="#carouselId" data-bs-slide-to="1" aria-label="Second slide"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img height="200" src="data:image/png;base64,@Model.car.Bas64img1" />
        </div>
        <div class="carousel-item">
            <img height="200" src="data:image/png;base64,@Model.car.Bas64img2" />
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<form method="post" class="col-sm-6 m-auto mt-5">
    <div><b>Price :</b>@Model.car.Price<span>$ per day</span></div>
    <input value="@Model.car.Platenumber" name="platenumber" />
    <input type="hidden" name="action" value="addbooking" />
    <input type="text" name="email" value="@Model.useremail" />
    <div class="form-floating mb-3 border border-dark rounded">
        <input class="form-control" type="datetime-local" value="@Model.booking.FromDate" name="fromdate" />
        <label for="formId1" class="p-2">From Date</label>
    </div>
    <div class="form-floating mb-3 border border-dark rounded">
        <input class="form-control" type="datetime-local" value="@Model.booking.ToDate" name="todate" />
        <label for="formId1" class="p-2">to Date</label>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Book</button>
    </div>
</form>
<div>@Model.message</div>